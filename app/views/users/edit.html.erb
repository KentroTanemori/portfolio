<%= render 'template/header' %>
<div class="media-area2">
 <div class="container">
  <div class="row">
   <div class="space2">
    <h2>プロフィール編集</h2>
     <%= form_for(@user) do |f| %>
     <label>Name</label>
     <%= f.text_field :name, autofocus: true, id:"inputEmail", placeholder:"名前" %>
     <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
   </div>
   <div class="space3">
    <%= attachment_image_tag @user, :profile_image,format: 'jpeg', fallback: "no_image.jpg", size: "100x100", class: "img-circle" %>
   </div> 
   <div class="col-md-2 col-md-offset-5">   				　
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
   </div>
   <br>
   <br>
   <br>
   <div class="col-md-6 col-md-offset-5">
    <%= f.submit "変更を保存", class: "btn btn-success col-xs-4 bg-warning text-white" %>
   </div>
   <br>
   <br>
    <% end %>
  </div>
 </div>
</div>
