<%= render 'template/header' %>
<div class="media-area2">
 <div class="container">
  <div class="row">
   <div class="col-xs-12 col-sm-6 col-md-3">
    <div class="circle">
     <h2>User info</h2>
      <table class="table">
       <tbody>
        <div class="image">
         <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100", class: "img-circle" %>
        </div>
        <br>
        <tr>
         <th>name</th>
         <th><%= @user.name %></th>
        </tr>
       </tbody>
      </table>
      <%= link_to edit_user_path(@user.id) do %>
      <div class="col-xs-12 btn btn-default ">
       <span class="glyphicon glyphicon-wrench" aria-hidden="true" ></span>
      </div>
      <% end %>
      <br>
      <br>
      <h4>投稿<%= @post_images.count %>件</h4>
       <%= render 'follow_form' %>
       <%= render 'stats' %>
     </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-offset-2">
     <%= form_for(@post_image, url: post_images_path) do |f| %>
     <% if @post_image.errors.any? %>
     <div id="error_explanation">
     <h2><%= @post_image.errors.count %>件のエラーが発生しました。</h2>
     <ul>
      <% @post_image.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
     </ul>
    </div>
      <% end %>
       <div class="row">
        <div class="col-xs-4">
         <%= f.attachment_field :images_images, multiple: true %>
        </div>
       </div>
       <hr>
       <div class="row">
        <div class="col-sm-12">
         <%= f.text_field :title, class: "form-control", id:"title", placeholder:"タイトル", warp: "hard" %>
        </div>
       </div>
       <hr>
       <div class="row">
        <div class="col-sm-12">
         <%= f.text_area :body, class: "form-control", rows:"3", placeholder:"コメントここに" %>
        </div>
       </div>
       <hr>
       <div class="row">
        <div class="col-sm-12">
         <%= f.submit "送信", class: "btn btn-primary col-xs-12" %>
      <% end %>
        </div>
       </div>
   </div>
  </div>
 </div>
</div>
