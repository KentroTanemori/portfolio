<%= render 'template/header' %>
<div class="media-area">
 <div class="container">
  <div class="row">
   <div class="col-xs-6">
    <% if @user.followings.count == 0 %>
     <h2>該当なし</h2>
    <% else %>
     <table class="table table-hover table-inverse">
      <thead>
       <tr>
        <th>ProfileImage</th>
        <th>name</th>
        <th>詳細</th>
       </tr>
      </thead>
      <tbody>
       <% @user.followings.each do |user| %>        　　　　　　　　　　　　　　
        <tr>
         <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size: "60x60", class: "img-circle pull-left profile-thumb" %></td>
         <td><%= user.name %></td>
         <td><%= link_to "詳細", user_path(user) %></td>
        </tr>
       <% end %>
      </tbody>
     </table>
    <% end %>
   </div> 
  </div>
 </div>
</div>
